# Nextus Production Environment Variables
# Copy to .env and fill in values

# Node Environment
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis (set automatically by Docker Compose)
REDIS_URL=redis://redis:6379

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@nexarats.com

# Cloudflare Tunnel (get from Cloudflare Zero Trust dashboard)
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=turn:your-turn-server:3478
# TURN_USERNAME=
# TURN_PASSWORD=

# Domain Configuration
API_DOMAIN=api.nexarats.com
WS_DOMAIN=ws.nexarats.com
MEDIA_DOMAIN=media.nexarats.com
